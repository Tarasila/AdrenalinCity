<project.taras.ua.adrenalincity.Activity.MovieMVC.MovieView.RootView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="project.taras.ua.adrenalincity.Activity.MovieMVC.FragmentCinema">

    <project.taras.ua.adrenalincity.Activity.MovieMVC.MovieView.CinemaLayout
        android:id="@+id/cinema_layout_in_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true">

    </project.taras.ua.adrenalincity.Activity.MovieMVC.MovieView.CinemaLayout>

    <project.taras.ua.adrenalincity.Activity.MovieMVC.ValueBarView.ValueBar xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/valueBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:clickable="false"
        custom:barWidth="@dimen/value_bar_barWidth"
        custom:baseColor="@color/white"
        custom:circleRadius="@dimen/value_bar_circleRadius"
        custom:circleTextColor="@color/white"
        custom:circleTextSize="@dimen/value_bar_circleTextSize"
        custom:fillColor="@color/red"
        custom:labelTextColor="@color/navy"
        custom:labelTextSize="@dimen/value_bar_labelTextSize"
        custom:maxValueTextColor="@color/navy"
        custom:maxValueTextSize="@dimen/value_bar_maxValueTextSize"
        custom:orientation="vertical"
        custom:spaceAfterBar="@dimen/value_bar_spaceAfterBar" />

    <project.taras.ua.adrenalincity.Activity.MovieMVC.ValueBarView.ValueBar xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/valueBarHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueBar"
        android:clickable="false"
        custom:barWidth="@dimen/value_bar_barWidth"
        custom:baseColor="@color/white"
        custom:circleRadius="@dimen/value_bar_circleRadius"
        custom:circleTextColor="@color/white"
        custom:circleTextSize="@dimen/value_bar_circleTextSize"
        custom:fillColor="@color/red"
        custom:labelTextColor="@color/navy"
        custom:labelTextSize="@dimen/value_bar_labelTextSize"
        custom:maxValueTextColor="@color/navy"
        custom:maxValueTextSize="@dimen/value_bar_maxValueTextSize"
        custom:orientation="horizontal"
        custom:spaceAfterBar="@dimen/value_bar_spaceAfterBar" />

