<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/ticket_basket_cv_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="#d7d7d7"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/ticket_basket_rl_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ticket_basket_tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Підводна ера"
            android:textColor="#000"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/ticket_basket_rl_container_desc"
            android:layout_below="@id/ticket_basket_tv_movie_title"
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ticket_basket_tv_seat_raw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="Ряд \n10"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ticket_basket_tv_seat_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/ticket_basket_tv_seat_raw"
                android:gravity="center"
                android:text="Місце \n5"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ticket_basket_tv_seat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/ticket_basket_tv_seat_place"
                android:gravity="center"
                android:text="Ціна \n50 uah"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ticket_basket_tv_hall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/ticket_basket_tv_seat_price"
                android:gravity="center"
                android:text="Зала \nчервона"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ticket_basket_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/ticket_basket_tv_hall"
                android:gravity="center"
                android:text="Дата \n30.05.2017"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ticket_basket_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="Час \n10:00"
                android:textColor="#000"
                android:textSize="10dp" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>