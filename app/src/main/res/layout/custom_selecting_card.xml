<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/ticket_basket_cv_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#d7d7d7"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/ticket_basket_rl_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ticket_basket_tv_seat_raw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ticket_basket_tv_seat_place"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ticket_basket_tv_seat_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ticket_basket_tv_seat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ticket_basket_tv_seat_place"
                android:textColor="#000"
                android:textSize="10dp" />

        <Button
            android:id="@+id/ticket_basket_b_cancel_order"
            android:background="@drawable/cancel"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="15dp"
            android:layout_height="15dp" />
    </RelativeLayout>



</android.support.v7.widget.CardView>